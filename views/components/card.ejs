<%_ data.forEach(item=> { _%>
<div class="card bg-white mb-md p-md">
  <div class="card-header mb-md flex-jc_sb">
    <div class="card-header_left flex">
      <div class="card-header_avatar mr-sm"></div>
      <div>
        <div><%= item.name %></div>
        <div class="card-header_time"><%= item.time %></div>
      </div>
    </div>
    <div class="card-header_right"></div>
  </div>
  <div class="card-text mb-sm">
    <div><%= item.text %></div>
  </div>
  <% if (item.image) { %> <% if (item.image.length===1) { %>
  <div class="card-img">
    <div class="card-img_item loadImg loading" data-url="<%= item.image[0].url %>" style="
                height: <%= item.image[0].height %>px;
                width: <%= item.image[0].width %>px;
            "></div>
  </div>

  <% } else { %>
  <div class="card-img grid9">
    <% item.image.forEach(img=> { %>
    <div data-url="<%= img.url %>" class="card-img_item loadImg loading"></div>
    <% }) %>
  </div>
  <% } %> <% } %>
</div>
<%_ }) _%>